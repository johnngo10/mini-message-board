<%- include('partials/head')%>
<div class="link">
  <a href="/">Back to homepage</a>
</div>
<h2>New Message</h2>
<form method="POST" action="/new">
  <fieldset class="input-container">
    <label for="author">
      Author:
      <input type="text" name="author" class="author-input" required />
    </label>
    <label for="message">
      Message:
      <textarea type="text" name="message" class="message-input" required ></textarea>
    </label>
  </fieldset>
  <fieldset class="submit-container">
    <input type="submit" class="submit-button" />
  </fieldset>
  <div class="push"></div>
</form>
</body>
</html>
